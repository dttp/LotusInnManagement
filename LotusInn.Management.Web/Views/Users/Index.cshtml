<div ng-controller="userList" ng-init="init()">
    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="\">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <span>Users</span>
            </li>
        </ul>
    </div>
    <h3 class="page-title">
        Users Management
    </h3>
    <!-- END PAGE HEADER-->
    <div ng-repeat="item in alertSvc.alerts" class="alert alert-{{item.type}}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="alertSvc.remove(item)"></button>
        <strong>{{item.title}}</strong> {{item.body}}
    </div>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary" ng-click="create()"><i class="fa fa-plus" aria-hidden="true"></i> Create</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">
                        @*<div class="portlet-title">
                                <div class="caption">

                                </div>
                            </div>*@
                        <div class="portlet-body">
                            <div class="table-scrollable">
                                <table class="table table-bordered table-hover table-striped table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>House</th>
                                            <th>Role</th>
                                            <th>Status</th>
                                            <th style="width: 300px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-if="users.length == 0">
                                            <td colspan="7">
                                                There are no items
                                            </td>
                                        </tr>
                                        <tr ng-repeat="user in users">
                                            <td>
                                                <a href="/users/detail?id={{user.Id}}">{{user.Username}}</a>
                                            </td>
                                            <td>{{user.Email}}</td>
                                            <td>{{user.Phone}}</td>
                                            <td>{{user.House.Name}}</td>
                                            <td>{{user.Role.Name}}</td>
                                            <td><span ng-if="user.Status && user.Status.length > 0" class="label" ng-class="{'label-success': user.Status == 'Verified', 'label-warning': user.Status == 'NotVerified', 'bg-grey-gallery': user.Status=='Disabled'}">{{user.Status}}</span></td>
                                            <td>
                                                <button ng-if="user.Id != 'admin'" title="Reset password" class="btn btn-outline btn-xs yellow-crusta" ng-click="resetPassword(user)">
                                                    <i class="fa fa-refresh"></i>
                                                    Reset Password
                                                </button>
                                                <button ng-if="user.Id != 'admin'"title="Edit this user"class="btn btn-outline btn-xs blue-hoki" ng-click="edit(user)">
                                                    <i class="fa fa-edit"></i>
                                                    Edit
                                                </button>
                                                <button ng-if="user.Id != 'admin'" title="Delete this user" class="btn btn-outline btn-xs red-flamingo" ng-click="delete(user)">
                                                    <i class="fa fa-remove"></i>
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
@section AngularController{
    
    <script src="~/app/components/users/userlist.js"></script>
}
