<div ng-controller="roomTypeList" ng-init="init()">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        RoomTypes <small>manage room types for house</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="\">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">RoomTypes</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <div ng-repeat="item in alertSvc.alerts" class="alert alert-{{item.type}}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="alertSvc.remove(item)"></button>
        <strong>{{item.title}}</strong> {{item.body}}
    </div>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row" >
        <div class="col-md-12" ng-show="houses.length == 0">
            There are no houses. Please click <a href="/houses">here </a>to add new house.
        </div>
        <div class="col-md-12" ng-show="houses.length > 0">
            <div class="row">
                <div class="col-md-12">
                    <form name="housesDropdownForm" class="form-horizontal" novalidate>
                        <div class="form-body">
                            <div class="form-group last">
                                <label class="control-label" style="float: left; margin-left: 15px">House</label>
                                <div class="col-md-3">
                                    <select class="form-control" ng-model="selectedHouse" ng-options="h as h.Name for h in houses track by h.Id" ng-change="switchHouse()"></select>                                    
                                </div>
                            </div>
                        </div>                        
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary" ng-click="create()"><i class="fa fa-plus" aria-hidden="true"></i> Create</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">
                        @*<div class="portlet-title">
                                <div class="caption">

                                </div>
                            </div>*@
                        <div class="portlet-body">
                            <div class="table-scrollable">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Unit</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr ng-if="roomTypes.length == 0">
                                        <td colspan="4">
                                            There are no items
                                        </td>
                                    </tr>
                                    <tr ng-repeat="roomType in roomTypes">
                                        <td>
                                            {{roomType.Name}}
                                        </td>
                                        <td>{{roomType.Price}}</td>
                                        <td>{{roomType.Unit}}</td>
                                        <td>
                                            <a href="javascript:;" class="btn btn-icon-only blue-hoki" ng-click="edit(roomType)">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="javascript:;" class="btn btn-icon-only red-flamingo" ng-click="delete(roomType)">
                                                <i class="fa fa-remove"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
@section AngularController{        
<script src="~/app/components/roomTypes/roomTypeList.js"></script>
}
