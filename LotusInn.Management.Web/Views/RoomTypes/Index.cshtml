<div ng-controller="roomTypeList" ng-init="init()">
    <!-- BEGIN PAGE HEADER-->

    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="\">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/houses">Houses</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/house/detail?id={{house.Id}}">{{house.Name}}</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <span>RoomTypes</span>
            </li>
        </ul>
    </div>
    <h3 class="page-title">
        RoomTypes <small>manage room types for {{house.Name}}</small>
    </h3>

    <!-- END PAGE HEADER-->
    <div ng-repeat="item in alertSvc.alerts" class="alert alert-{{item.type}}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="alertSvc.remove(item)"></button>
        <strong>{{item.title}}</strong> {{item.body}}
    </div>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row" >
        
        <div class="col-md-12">
            
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary" ng-click="create()"><i class="fa fa-plus" aria-hidden="true"></i> Create</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">
                        @*<div class="portlet-title">
                                <div class="caption">

                                </div>
                            </div>*@
                        <div class="portlet-body">
                            <div class="table-scrollable">
                                <table class="table table-bordered table-hover table-striped table-condensed">
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Square</th>
                                        <th>Price Per Month</th>
                                        <th>Price Per Week</th>
                                        <th>Price Per Night</th>
                                        <th style="width: 180px;">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr ng-if="roomTypes.length == 0">
                                        <td colspan="6">
                                            There are no items
                                        </td>
                                    </tr>
                                    <tr ng-repeat="roomType in roomTypes">
                                        <td>
                                            {{roomType.Name}}
                                        </td>
                                        <th>{{roomType.Square}}m<sup>2</sup></th>
                                        <td>{{roomType.Price}} {{roomType.Unit}}</td>
                                        <td>{{roomType.PricePerWeek}} {{roomType.UnitPerWeek}}</td>
                                        <td>{{roomType.PricePerNight}} {{roomType.UnitPerNight}}</td>
                                        <td>
                                            <button class="btn btn-xs btn-outline blue-hoki" ng-click="edit(roomType)">
                                                <i class="fa fa-edit"></i>
                                                Edit
                                            </button>
                                            <button class="btn btn-xs btn-outline red-flamingo" ng-click="delete(roomType)">
                                                <i class="fa fa-remove"></i>
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
@section AngularController{        
<script src="~/app/components/roomTypes/roomTypeList.js"></script>
}
