<div ng-controller="roomTypeAddEdit" ng-init="init()">
    <!-- BEGIN PAGE HEADER-->

    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/houses">Houses</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/houses/detail?id={{house.Id}}">{{house.Name}}</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/roomtypes?houseId={{house.Id}}">Room Types</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <span href="#">AddEdit</span>
            </li>
        </ul>
    </div>
    <h3 class="page-title">
        Room Type <small>Add/Edit room type for {{house.Name}}</small>
    </h3>
    <!-- END PAGE HEADER-->
    <div ng-repeat="item in alertSvc.alerts" class="alert alert-{{item.type}}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="alertSvc.remove(item)"></button>
        <strong>{{item.title}}</strong> {{item.body}}
    </div>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row" >
        <div class="col-md-12">
            <form name="roomTypeForm" class="form-horizontal" novalidate>
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="name" placeholder="Enter room type name here" ng-model="roomType.Name" required />
                            <span class="help-block" ng-show="hasError(roomTypeForm.name, 'required')">RoomType name is required</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Square</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control" name="name" placeholder="" ng-model="roomType.Square" />                            
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Price Per Month</label>
                        <div class="col-md-1">
                            <input type="text" class="form-control" ng-model="roomType.Price"/>
                        </div>
                        <div class="col-md-4">
                            <select class="form-control" style="width: 80px;" ng-options="unit for unit in units" ng-model="roomType.Unit"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Price Per Week</label>
                        <div class="col-md-1">
                            <input type="text" class="form-control" ng-model="roomType.PricePerWeek"/>
                        </div>
                        <div class="col-md-4">
                            <select class="form-control" style="width: 80px;" ng-options="unit for unit in units" ng-model="roomType.UnitPerWeek"></select>
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Price Per Night</label>
                        <div class="col-md-1">
                            <input type="text" class="form-control"ng-model="roomType.PricePerNight" />
                        </div>
                        <div class="col-md-4">
                            <select class="form-control" style="width: 80px;" ng-options="unit for unit in units" ng-model="roomType.UnitPerNight"></select>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn btn-primary" ng-click="submit(roomTypeForm)">Submit</button>
                            <button type="button" class="btn default" ng-click="cancel()">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
@section AngularController{         
    <script src="~/app/components/roomTypes/roomTypesAddEdit.js"></script>   
}
