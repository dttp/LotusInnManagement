<div ng-controller="warehouseItemAddEditCtrl" ng-init="init()">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Warehouse Item Add/Edit
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/warehouse">Warehouse</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Add/Edit</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <div ng-repeat="item in alertSvc.alerts" class="alert alert-{{item.type}}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="alertSvc.remove(item)"></button>
        <strong>{{item.title}}</strong> {{item.body}}
    </div>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <form name="whForm" class="form-horizontal" novalidate>
                <div class="form-body">
                    <div class="form-group" ng-class="{'has-error': hasError(whForm.name, 'required')}">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-4">
                            <div class="input-icon right">
                                <i class="fa fa-warning" ng-show="hasError(whForm.name, 'required')"></i>
                                <input type="text" class="form-control" name="name" placeholder="Enter item name here" ng-model="whItem.Name" required />
                            </div>
                            <span class="help-block" ng-show="hasError(whForm.name, 'required')">Warehouse item name is required</span>
                        </div>
                    </div>

                    <div class="form-group" >
                        <label class="col-md-3 control-label">Description</label>
                        <div class="col-md-4">
                            <textarea class="form-control" rows="4" ng-model="whItem.Description"></textarea>
                        </div>
                    </div>

                    <div class="form-group" ng-class="{'has-error': hasError(whForm.count, 'pattern')}">
                        <label class="col-md-3 control-label">Count</label>
                        <div class="col-md-4">
                            <div class="input-icon right">
                                <i class="fa fa-warning" ng-show="hasError(whForm.count, 'pattern')"></i>
                                <input type="text" class="form-control input-xsmall" name="count" ng-model="whItem.Count" ng-pattern="numberPattern" />
                            </div>
                            <span class="help-block" ng-show="hasError(whForm.count, 'pattern')">Invalid number</span>
                        </div>
                    </div>

                    <div class="form-group last">
                        <label class="col-md-3 control-label">Condition</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" ng-model="whItem.Condition" />
                        </div>
                    </div>

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-4">
                            <button type="submit" class="btn btn-primary" ng-click="submit()">Submit</button>
                            <button type="button" class="btn default" ng-click="cancel()">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
@section AngularController{
    <script src="~/app/components/warehouse/warehouse.itemaddedit.js"></script>
}
