<div ng-controller="roomList" ng-init="init()">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Rooms <small>manage room for house</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="\">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Rooms</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <div ng-repeat="item in alertSvc.alerts" class="alert alert-{{item.type}}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="alertSvc.remove(item)"></button>
        <strong>{{item.title}}</strong> {{item.body}}
    </div>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row" >
        
        <div class="col-md-12" ng-show="houses.length == 0">
            There are no houses. Please click <a href="/houses">here </a>to add new house.
        </div>
        <div class="col-md-12" ng-show="houses.length > 0">
            <div class="row">
                <div class="col-md-12">
                    <form name="housesDropdownForm" class="form-horizontal" novalidate>
                        <div class="form-body">
                            <div class="form-group last">
                                <label class="control-label" style="float: left; margin-left: 15px">House</label>
                                <div class="col-md-3">
                                    <select class="form-control" ng-options="house as house.Name for house in houses track by house.Id" ng-model="house" ng-change="refreshRooms()"></select>                                    
                                </div>
                            </div>
                        </div>                        
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary" ng-click="create()"><i class="fa fa-plus" aria-hidden="true"></i> Create</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">
                        @*<div class="portlet-title">
                                <div class="caption">

                                </div>
                            </div>*@
                        <div class="portlet-body">
                            <div class="table-scrollable">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                    <tr>
                                        <th>Room Number</th>
                                        <th>Room Type</th>
                                        <th>Square</th>
                                        <th>Price Per Month</th>
                                        <th>Price Per Week</th>
                                        <th>Price Per Night</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr ng-if="rooms.length == 0">
                                        <td colspan="3">
                                            There are no items
                                        </td>
                                    </tr>
                                    <tr ng-if="rooms.length > 0" ng-repeat="room in rooms">
                                        <td>
                                            {{room.RoomNumber}}
                                        </td>
                                        <td>{{room.RoomType.Name}}</td>
                                        <td>{{room.RoomType.Square}}</td>
                                        <td>{{room.RoomType.Price}}{{room.RoomType.Unit}}</td>
                                        <td>{{room.RoomType.PricePerWeek}}{{room.RoomType.UnitPerWeek}}</td>
                                        <td>{{room.RoomType.PricePerNight}}{{room.RoomType.UnitPerNight}}</td>
                                        <td>
                                            <a href="javascript:;" class="btn btn-icon-only blue-hoki" ng-click="edit(room)">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="javascript:;" class="btn btn-icon-only red-flamingo" ng-click="delete(room)">
                                                <i class="fa fa-remove"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
@section AngularController{        
<script src="~/app/components/rooms/roomList.js"></script>
}
