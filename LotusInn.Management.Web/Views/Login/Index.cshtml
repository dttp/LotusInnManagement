</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="login" ng-app="lotusinn.login" ng-controller="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="/">
            <img src="~/app/assets/images/logo.png" alt="logo" style="height: 80px;" />
            <span class="logo1">LOTUS</span> <span class="logo2">INN</span>
        </a>
    </div>
    <!-- END LOGO -->    
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" name="loginForm" novalidate="">
            <h3 class="form-title">Login to your account</h3>
            <div class="alert alert-danger" ng-class="{'display-hide': error.message.length == 0}">                
                <span>
                    {{error.message}}
                </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" ng-model="loginInfo.userName" ng-enter="login(loginForm)" required/>                    
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" ng-enter="login(loginForm)" ng-model="loginInfo.password" required/>                    
                </div>
            </div>
            <div class="form-actions">
                @*<label class="checkbox">
                    <input type="checkbox" icheck ng-model="loginInfo.remember" skin="minimal-blue" name="remember" value="1" /> Remember me
                </label>*@
                <button type="button" class="btn green-haze pull-right" ng-click="login(loginForm)">
                    Login <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>            
            <div class="forget-password">
                <h4>Forgot your password ?</h4>
                <p>
                    no worries, click <a href="javascript:;" id="forget-password">
                        here
                    </a>
                    to reset your password.
                </p>
            </div>            
        </form>
        <!-- END LOGIN FORM -->        
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        2016 - LotusInn Management &copy; GVCompany.com.
    </div>
    <!-- END COPYRIGHT -->
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- BEGIN CORE PLUGINS -->
   
    <script src="~/app/assets/plugins/jquery-2.2.4/jquery.js"></script>
    <script src="~/app/assets/plugins/bootstrap-3.3.6/js/bootstrap.min.js"></script>
    <script src="~/app/assets/plugins/angularjs-1.5.x/angular.min.js"></script>
    <script src="~/app/assets/js/Util.js"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->

    <script src="~/app/assets/plugins/icheck/js/icheck.min.js"></script>
    <script src="~/app/assets/plugins/icheck/icheck.js"></script>

    <script src="~/app/assets/plugins/angular-cookie/angular-cookie.min.js"></script>
    <script src="~/app/directives/ngEnter.js"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/app/assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="~/app/assets/admin/layout/scripts/layout.js" type="text/javascript"></script>
<!-- END PAGE LEVEL SCRIPTS -->

    <script src="~/app/components/login/login.js"></script>
    <script>
jQuery(document).ready(function() {
  Metronic.init(); // init metronic core components
  Layout.init(); // init current layout  
});
    </script>
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>