<div ng-controller="roleList" ng-init="init()">
    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="\">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <span>Roles</span>
            </li>
        </ul>
    </div>
    <h3 class="page-title">
        Roles Management
    </h3>
    <!-- END PAGE HEADER-->
    <div ng-repeat="item in alertSvc.alerts" class="alert alert-{{item.type}}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="alertSvc.remove(item)"></button>
        <strong>{{item.title}}</strong> {{item.body}}
    </div>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary" ng-click="create()"><i class="fa fa-plus" aria-hidden="true"></i> Create</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">
                        @*<div class="portlet-title">
                                <div class="caption">

                                </div>
                            </div>*@
                        <div class="portlet-body">
                            <div class="table-scrollable">
                                <table class="table table-bordered table-hover table-striped table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Type</th>
                                            <th style="width: 300px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-if="roles.length == 0">
                                            <td colspan="3">
                                                There are no items
                                            </td>
                                        </tr>
                                        <tr ng-repeat="role in roles">
                                            <td>
                                                <a href="/role/detail?id={{role.Id}}">{{role.Name}}</a>
                                            </td>
                                            <td>{{role.Type}}</td>
                                            <td>                                                
                                                <button ng-if="role.Type != 'System'" class="btn btn-outline btn-xs blue-hoki" ng-click="edit(role)">
                                                    <i class="fa fa-edit"></i>
                                                    Edit
                                                </button>
                                                <button ng-if="role.Type != 'System'" class="btn btn-outline btn-xs red-flamingo" ng-click="delete(role)">
                                                    <i class="fa fa-remove"></i>
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
    <script type="text/ng-template" id="roleModal.html">
        <div class="modal-header">
            <h3 class="modal-title">Role Info!</h3>
        </div>
        <div class="modal-body">
            <form name="roleForm" class="form form-horizontal" novalidate>
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-8">
                            <input type="text" name="name" ng-model="role.Name" class="form-control" required ng-enter="ok()" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn blue" type="button" ng-click="ok()">Yes</button>
            <button class="btn btn-default" type="button" ng-click="cancel()">No</button>
        </div>
    </script>
</div>
@section AngularController{

    <script src="~/app/components/roles/role.list.js"></script>
}
