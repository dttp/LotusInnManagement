<div ng-controller="moneysourceCtrl" ng-init="init()">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Money Source Management
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="\">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Money Sources</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <div ng-repeat="item in alertSvc.alerts" class="alert alert-{{item.type}}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="alertSvc.remove(item)"></button>
        <strong>{{item.title}}</strong> {{item.body}}
    </div>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary" ng-click="create()"><i class="fa fa-plus" aria-hidden="true"></i> Create</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">
                        @*<div class="portlet-title">
                                <div class="caption">

                                </div>
                            </div>*@
                        <div class="portlet-body">
                            <div class="table-scrollable">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>House</th>
                                            <th>Balance USD</th>
                                            <th>Balance VND</th>
                                            <th style="width: 200px">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-if="moneySources.length == 0">
                                            <td colspan="5">
                                                There are no items
                                            </td>
                                        </tr>
                                        <tr ng-repeat="moneySource in moneySources">
                                            <td>
                                                <a href="/moneysource/detail?id={{moneySource.Id}}">{{moneySource.Name}}</a>
                                            </td>
                                            <td>
                                                {{moneySource.House.Name}}
                                            </td>
                                            <td>
                                                {{moneySource.BalanceUSD}}
                                            </td>
                                            <td>
                                                {{moneySource.BalanceVND}}
                                            </td>
                                            <td>
                                                <a href="javascript:;" title="Edit this warehouse" class="btn btn-icon-only blue-hoki" ng-click="edit(moneySource)">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a href="javascript:;" title="Delete this warehouse" class="btn btn-icon-only red-flamingo" ng-click="delete(moneySource)">
                                                    <i class="fa fa-remove"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>


@section AngularController{
    <script src="~/app/components/moneySource/moneySource.list.js"></script>
}
